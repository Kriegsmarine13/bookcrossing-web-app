extends ../templates/index.pug

block includes
	link(rel="stylesheet", type="text/css", href="css/main.css")
	link(rel="stylesheet", type="text/css", href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
	script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js")

block content
	body.container-fluid
		nav(class="navbar navbar-expand-lg navbar-light bg-light")
			a(class="navbar-brand", href="#") Navbar
			button(class="navbar-toggler", type="button", data-toggle="collapse", data-target="#navbarSupportedContent", aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation")
				span.navbar-toggler-icon
			div(class="collapse navbar-collapse", id="navbarSupportedContent")
				ul(class="navbar-nav mr-auto")
					li(class="nav-item active")
						a(class="nav-link", href="#") Home
							span.sr-only (current)
					li.nav-item
						a(class="nav-link", href="#") Link
					li(class="nav-item dropdown")
						a(class="nav-link dropdown-toggle", href="#", id="navbarDropdown", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") Dropdown
						div(class="dropdown-menu", aria-labelledby="navbarDropdown")
							a(class="dropdown-item" href="#") Action
							a(class="dropdown-item", href="#") Another action
							div.dropdown-divider
							a(class="dropdown-item", href="#") Something else here
					li.nav-item
						a(class="nav-link disabled", href="#") Disabled
				form(class="form-inline my-2 my-lg-0")
					input(class="form-control mr-sm-2", type="search", placeholder="Search", aria-label="Search")
					button(class="btn btn-outline-success my-2 my-sm-0", type="submit") Search

	div(class="col-sm-8 float-left")
		div.container
			script(type="text/javascript", charset="utf-8", async, src="https://api-maps.yandex.ru/services/constructor/1.0/js/?um=constructor%3Ae4b906d8090e4df982711ef63a795e1c05b504fc16cb44db19d3656cf79eacdf&amp;lang=ru_RU&amp;scroll=true")
	div(class="col-sm-4 float-right")
		ul.list-group
			li(class="list-group-item list-group-item-action") Item 1
			li(class="list-group-item list-group-item-action") Item 2
			li(class="list-group-item list-group-item-action") Item 3
			li(class="list-group-item list-group-item-action") Item 4